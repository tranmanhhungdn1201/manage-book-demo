extends ../common/common
block content
 header
  nav(class="navbar navbar-expand-lg navbar-light bg-light")
    a(class="navbar-brand", href="books/create") BookStore
    div(class="navbar-nav")
      ul(class="nav justify-content-center")
        li(class="nav-item mr-2")
          a(class="nav-item nav-link", href="books/create") Create book
        li(class="nav-item mr-2")
          a(class="nav-item nav-link", href="users") Users
        li(class="nav-item")
          a(class="nav-item nav-link", href="transactions") Transactions
 h3(class="text-center") List of book
 div(class="container")
   ul(class="list-group")
    each book in books
     li(class="list-group-item")
      span=book.title
      span &nbsp
      a(href="books/edit/"+book.id) Edit
      span &nbsp
      a(href="books/"+book.id+"/delete") Delete
      <br>
      p=book.description

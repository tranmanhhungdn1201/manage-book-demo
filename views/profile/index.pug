extends ../common/common
block content
  h1 Update profile
    form(action="", method="POST", enctype="multipart/form-data")
      .form-group
        =userLogin.avatar
        if(userLogin.avatar)
          img(src=userLogin.avatar, width="100")
        else
          img(src="https://res.cloudinary.com/dkyjdrbdj/image/upload/v1589813311/profile/2020-05-18T14:48:31.602Z.jpg", width="100")
      .form-group
        input.form-control(type="file", name="avatar")
      .form-group
        button.btn.btn-success Submit
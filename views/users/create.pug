extends ../common/common
block content
  .container
    h1.text-center Create user
    if errors
      each error in errors
        .alert.alert-danger=error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
      .form-group
        label Email:
        input.form-control(type="text", name="email", value=value ? value.email : "")
      .form-group
        label Name:
        input.form-control(type="text", name="name", value=value ? value.name : "")
      .form-group
        label Age:
        input.form-control(type="text", name="age", value=value ? value.age : "")
      .form-group
        label Avatar:
        input.form-control(type="file", name="avatar")
      .form-group
        button.btn.btn-success Submit
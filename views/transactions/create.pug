extends ../common/common
block content
  h1 Create transaction
    form(action="/transactions/create", method="POST")
      label choose user
      <br>
      select(name="userId")
        each user in users
          option(value=user.id) #{user.name}
      <br>
      label choose book
      <br>
          select(name="bookId")
            each book in books
              option(value=book.id) #{book.title}
      <br>
      button(type="submit") Create